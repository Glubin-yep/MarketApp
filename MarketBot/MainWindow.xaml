<Window x:Class="MarketBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketBot"
        mc:Ignorable="d"
        Title="MainWindow" Width="1000" Height="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Money" Grid.Row="1" Grid.Column="5" Content="Money" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"  Margin="10,10,0,0" HorizontalContentAlignment="Center" RenderTransformOrigin="0.492,0.573"/>
        <Label x:Name="Nickname" Grid.Row="1" Grid.Column="5" Content="Nickname" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"   Margin="10,0,0,0" HorizontalContentAlignment="Center" />
        <Image x:Name="Photo" Grid.Row="1" Grid.Column="6" Margin="17,7,17,44"/>

        <Label x:Name="TradeStatus" Grid.Row="1" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20"  Margin="0,53,0,0" HorizontalContentAlignment="Center"/>
        <Button x:Name="Iteams_Button" Grid.Column="1" Content="Load Your Iteams" HorizontalAlignment="Center" Margin="0,37,0,0" Grid.Row="2" VerticalAlignment="Top" Click="Iteams_Button_Click"/>
        <ListBox x:Name="ItemsLB" Grid.Column="2"  Grid.ColumnSpan="2" Grid.Row="2" SelectionChanged ="ItemsLB_SelectionChanged" />
        <Button x:Name="Remove" Grid.Column="1" Content="Remove" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Click="Remove_Click" IsEnabled="False" Margin="0,79,0,0" />
        <Button x:Name="Update" Grid.Column="1" Content="Update" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Click="Update_Click" IsEnabled="False" Margin="0,130,0,0" />

        <Button x:Name="Inventory_Button" Grid.Column="1" Content="Load Your Inventory" HorizontalAlignment="Left" Margin="18,44,0,0" Grid.Row="3" VerticalAlignment="Top" Click="Inventory_Button_Click"/>
        <ListBox x:Name="InventoryLB" Grid.Column="2"  Grid.ColumnSpan="2" Grid.Row="3"  d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="InventoryLB_SelectionChanged" Margin="0" Grid.RowSpan="1" />
        <Button x:Name="Sell" Grid.Column="1" Content="Sell" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Click="Sell_Click" IsEnabled="False" Margin="62,79,0,0" />

    </Grid>
</Window>
